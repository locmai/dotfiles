# ls
alias l='ls -Flh'
alias ll='ls -Flha'

# interactive
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# verbose
alias mkdir='mkdir -v'
alias rmdir='rmdir -v'

# tmux
alias t='tmux'
alias ta='tmux attach'
alias tls='tmux list-sessions'

# less
alias less='less --raw-control-chars'

# diff
alias diff='git diff --no-index'

# nvim
alias v='nvim'

# cheat
cheat () {
    curl "cheat.sh/$1"
}

# calculator
alias calc='python -i -c "from math import *"'

alias fixfn='echo 2 | sudo tee /sys/module/hid_apple/parameters/fnmode'

alias pbcopy='xsel --clipboard --input'
alias pbpaste='xsel --clipboard --output'

[
  {
    "context": "(Editor || ProjectPanel) && vim_mode != insert",
    "bindings": {
      "space e": "workspace::ToggleRightDock",
      "space space": "file_finder::Toggle",
      "space f f": "file_finder::Toggle",
      "space s g": "workspace::NewSearch"
    }
  },
  {
    "context": "Editor && (vim_mode == normal || vim_mode == visual)",
    "bindings": {
      ";": ["workspace::SendKeystrokes", ":"],
      "s": "vim::PushSneak"
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      // This is identical to the binding in the base keymap, but the vim bindings above to
      // "vim::Tab" shadow it, so it needs to be bound again.
      "ctrl-p": "editor::AcceptEditPrediction"
    }
  },
  {
    "context": "ProjectPanel",
    "bindings": {
      "a": "project_panel::NewFile",
      "b": "project_panel::Rename",
      "d": "project_panel::Delete",
      "r": "project_panel::Rename"
    }
  }
]
